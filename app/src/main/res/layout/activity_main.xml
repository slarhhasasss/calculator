<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="60sp"
            android:descendantFocusability="afterDescendants">

            <TextView
                android:id="@+id/textViewActMainFirstNum"
                style="@style/TextViewCalcTheme"
                android:layout_marginEnd="15sp"/>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textViewActMainOperand"
            style="@style/TextViewCalcTheme"
            android:layout_margin="15sp"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="60sp"
            android:descendantFocusability="afterDescendants">

            <TextView
                android:id="@+id/textViewActMainSecondNum"
                style="@style/TextViewCalcTheme"
                android:layout_margin="15sp"/>

        </HorizontalScrollView>


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="60sp"
            android:descendantFocusability="afterDescendants">

        <TextView
            android:id="@+id/textViewActMainAns"
            style="@style/TextViewCalcTheme"
            android:textStyle="italic"
            android:layout_margin="15sp"/>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="500sp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/RowLinearLayBtns">

                <Button
                    android:id="@+id/buttonPlus"
                    style="@style/ButtonsCalcTheme"
                    android:text="+"/>

                <Button
                    android:id="@+id/buttonMinus"
                    style="@style/ButtonsCalcTheme"
                    android:text="-"/>

                <Button
                    android:id="@+id/buttonMultiplic"
                    android:text="*"
                    style="@style/ButtonsCalcTheme"/>

                <Button
                    android:id="@+id/buttonDivision"
                    style="@style/ButtonsCalcTheme"
                    android:text="/" />

            </LinearLayout>

            <LinearLayout
                style="@style/RowLinearLayBtns">

                <Button
                    android:id="@+id/button1"
                    android:text="1"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/button2"
                    android:text="2"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/button3"
                    android:text="3"
                    style="@style/ButtonsCalcTheme" />

                <ImageView
                    android:id="@+id/buttonDelete"
                    android:src="@drawable/ic_backspace"
                    android:layout_height="match_parent"
                    android:layout_width="87sp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                style="@style/RowLinearLayBtns">

                <Button
                    android:id="@+id/button4"
                    android:text="4"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/button5"
                    android:text="5"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/button6"
                    android:text="6"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/buttonC"
                    android:text="C"
                    style="@style/ButtonsCalcTheme"/>

            </LinearLayout>

            <LinearLayout
                style="@style/RowLinearLayBtns">

                <Button
                    android:id="@+id/button7"
                    android:text="7"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/button8"
                    android:text="8"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/button9"
                    android:text="9"
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/buttonPM"
                    android:text="+-"
                    style="@style/ButtonsCalcTheme"/>

            </LinearLayout>

            <LinearLayout
                style="@style/RowLinearLayBtns">

                <Button
                    android:id="@+id/buttonPoint"
                    android:text="."
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/button0"
                    style="@style/ButtonsCalcTheme"
                    android:text="0" />

                <Button
                    android:id="@+id/buttonAns"
                    android:text="="
                    style="@style/ButtonsCalcTheme" />

                <Button
                    android:id="@+id/buttonNONO"
                    android:text=""
                    style="@style/ButtonsCalcTheme"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>










</FrameLayout>